%html{ lang: 'en' }
  %head
    %meta{ charset: '{{ site.encoding }}' }/
    %title<> {{ site.title }}

    %meta{ http_equiv: 'X-UA-Compatible', content: 'IE=edge,chrome=1' }/
    %meta{ name: 'referrer',    content: 'no-referrer-when-downgrade' }/
    %meta{ name: 'viewport',    content: 'width=device-width, initial-scale=1.0' }/

    %meta{ name: 'keywords',    content: '{{ site.keywords | join: "," }}' }/
    %meta{ name: 'revised',     content: '{{ site.time | date_to_rfc822 }}' }/

    {% include twitter_meta.haml %}
    {% seo %}

    {% feed_meta %}

    %link{ rel: 'license', title: '{{ site.license.name }}', href: 'https://spdx.org/licenses/{{ site.license.spdx }}.html' }/

    %link{ rel: 'icon', sizes: '160x160', href: '{% asset favicon.ico @path %}' }
    %link{ rel: 'shortcut icon', href: '{% asset favicon.ico @path %}' }
    %link{ rel: 'icon', type: 'image/vnd.microsoft.icon', href: '{% asset favicon.ico @path %}' }
    %link{ rel: 'icon', type: 'image/x-icon', href: '{% asset favicon.ico @path %}' }
    %link{ rel: 'icon', href: '{% asset favicon.ico @path %}' }

    {% asset index.css %}

  %body
    %header
      {% include header.haml %}

    .container-lg
      .row
        .col-3.py-3.d-none.d-lg-block
          {% include sidebar.haml %}
        %main.col-9.py-3{ role: :content }
          {{ content }}

    %script{ src: 'https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity: 'sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=', crossorigin: 'anonymous' }
    {% asset application.js %}
