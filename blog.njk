---
changefreq: weekly
layout: base
pagination:
  alias: posts
  data: collections.post
  reverse: true
  size: 50
---

<table class="blog-posts">
  <tbody>
    {% for post in posts %}
    <tr class="blog-post">
      <td class="title"><span><a href="{{ post.url | url }}">{% icon post.data.icon %}&nbsp;{{ post.data.title }}</a></span></td>
      <td class="date">{% date post.date %}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{%- if pagination.hrefs.length > 1 -%}
<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item{% if pagination.href.previous == null %} disabled{% endif %}"><a class="page-link" href="{% if pagination.href.previous != null %}{{ pagination.href.previous }}{% else %}#{% endif %}" aria-label="Newer posts"><span aria-hidden="true">&laquo;</span></a></li>
    {% for href in pagination.hrefs %}
    <li class="page-item"><a class="page-link{% if page.url == href %} active{% endif %}" href="{{ href }}" aria-label="Page {{ loop.index }}">{{ loop.index }}</a></li>
    {% endfor %}
    <li class="page-item{% if pagination.href.next == null %} disabled{% endif %}"><a class="page-link" href="{% if pagination.href.next != null %}{{ pagination.href.next }}{% else %}#{% endif %}" aria-label="Older posts"><span aria-hidden="true">&raquo;</span></a></li>
  </ul>
</nav>
{%- endif -%}
